<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Label?>
<AnchorPane maxHeight="-Infinity"
            maxWidth="-Infinity"
            minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="600.0"
            prefWidth="400.0"
            stylesheets="@../css/main.css"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="junny.Ui.MainWindow">
    <children>
        <!-- Title -->
        <Label text="Chat with Junny"
               prefHeight="20.0"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-alignment: center;"
               AnchorPane.topAnchor="0.0"
               AnchorPane.leftAnchor="0.0"
               AnchorPane.rightAnchor="0.0" />

        <!-- Chat container (starts right below the title) -->
        <ScrollPane fx:id="scrollPane" fitToWidth="true" hbarPolicy="NEVER" vvalue="1.0"
                    AnchorPane.topAnchor="25.0"
                    AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0"
                    AnchorPane.bottomAnchor="43.0">
            <content>
                <VBox fx:id="dialogContainer" spacing="5.0" prefWidth="388.0" />
            </content>
        </ScrollPane>

        <!-- Input -->
        <TextField fx:id="userInput" onAction="#handleUserInput"
                   prefHeight="41.0" prefWidth="324.0"
                   AnchorPane.bottomAnchor="1.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="76.0" />
        <Button fx:id="sendButton" text="Send" onAction="#handleUserInput"
                prefHeight="41.0" prefWidth="76.0"
                AnchorPane.bottomAnchor="1.0" AnchorPane.rightAnchor="0.0" />
    </children>
</AnchorPane>
